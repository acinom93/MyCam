<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhotoActivity">

    <FrameLayout
        android:id="@+id/viewCamera"
        android:layout_width="match_parent"
        android:layout_height="521dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"></FrameLayout>

    <Button
        android:id="@+id/photoClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="125dp"
        android:backgroundTint="@color/colorAccent"
        android:fontFamily="cursive"
        android:onClick="clickPhoto"
        android:text="CLICK "
        android:textColor="@android:color/background_light"
        android:textSize="30sp" />

    <Button
        android:id="@+id/Quit"
        android:layout_width="69dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:backgroundTint="@color/colorAccent"
        android:fontFamily="cursive"
        android:onClick="quitPhotoActivity"
        android:text="BACK"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="@android:color/background_light"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/latestImgView"
        android:layout_width="84dp"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:onClick="lastImgClicked"
        app:srcCompat="@drawable/ic_launcher_background" />

</RelativeLayout>